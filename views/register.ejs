<%- include("partials/header"); -%>

<!-- Register section starts -->
<section class="loginpage">
  <form action="/register" method="POST">
    <div class="wrapper fadeInDown">
      <h1 class="favv">WELCOME!</h1>
      <div id="formContentRegister">
        <br>
        <h2 style="color: #125d98">REGISTER</h2>
        <form>
          <input type="text" id="login" class="fadeIn second" name="username" placeholder="Enter email">
          <input type="password" id="password" class="fadeIn third" name="password" placeholder="Enter password">
          <input type="submit" class="fadeIn fourth" value="Register">
        </form>
      </div>
    </div>
  </form>
</section>
<!-- Register section ends -->
